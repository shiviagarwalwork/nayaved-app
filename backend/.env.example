# Claude API Key (required)
CLAUDE_API_KEY=your-anthropic-api-key-here

# Developer access codes (comma-separated for multiple codes)
# Use strong, random codes in production
DEVELOPER_CODES=AYUVED_DEV_2024,YOUR_CUSTOM_CODE

# Usage limits for free tier
FREE_SCAN_LIMIT=2
FREE_CHAT_LIMIT=10

# Server port
PORT=4000

# Environment (development or production)
# In production, CORS is restricted and security headers are enforced
NODE_ENV=development

# RevenueCat webhook secret (optional, for subscription verification)
# Get this from RevenueCat dashboard -> Project Settings -> Webhooks
REVENUECAT_WEBHOOK_SECRET=your-webhook-secret-here
